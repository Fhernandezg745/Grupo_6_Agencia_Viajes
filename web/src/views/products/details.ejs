<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../includes/head") %>
        <link rel="stylesheet" href="/css/details-mobile.css">
        <link rel="stylesheet" href="/css/details-tablet.css">
        <link rel="stylesheet" href="/css/details-desktop.css">
        <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script defer src="/scripts/deleteProduct.js"></script>
</head>

<body>

    <%- include("../includes/header") %>

        <main class="main-top-details">
            <section class="mainDetails">
                <figure class="mainFigureDetails">
                    <img src="/products/<%= product.images[0].images %>" alt="" class="mainImageDetails">
                </figure>
                <div class="description-product1">
                    <h1>
                        <%= product.tittle %>
                    </h1>
                    <h2>
                        <%= product.days %> dias/
                            <%= product.nights %> noches
                    </h2>
                    <h3 class="idProducto">Id Producto:
                        <%= product.id %>
                    </h3>
                    <%  if(user && user.isAdmin == true){ %>
                        <div class="adminBtns">
                            <a href="/products/editProduct/<%= product.id %>"><button class="editProductSelected">Editar Producto</button></a>
                            <form method="POST" action="/products/delete/<%= product.id %>?_method=DELETE" class="formAreaCreateProducts" id="deleteProductSelection">
                                <a href="" class="checkDelete"><button><i class="fa-solid fa-trash-can"></i>Eliminar Producto</button></a>
                            </form>
                        </div>
                        <%  } %>
                            <div class="articleDetails">
                                <div>
                                    <ul class="listDetails">
                                        <li><i class="fa-solid fa-bed"></i>
                                            <%= product.nights %> noches de alojamiento en hoteleria
                                                <%= product.stars %>
                                                    estrellas
                                        </li>
                                        <li><i class="fa-solid fa-bus"></i> traslados in/out y entre hoteles</li>
                                        <li><i class="fa-solid fa-van-shuttle"></i> Itinerario/excursiones:
                                            <%= product.shortDescription %>
                                        </li>
                                        <li><i class="fa-solid fa-plane-departure"></i> aereos incluidos</li>
                                        <h3 class="articleTitle">Petra - Jordania (
                                            <%= product.days %> dias/
                                                <%= product.nights
                                            %> noches)</h3>
                                    </ul>
                                </div>
                                <div class="precioArticuloMain">
                                    <p>Desde
                                        <%= product.salesPrice %> USD*</p>
                                    <p class="condition">*Precio por persona en base doble</p>
                                </div>
                            </div>
                </div>

            </section>
            <section class="bottomClassMain">
                <div class="fancyHeader">
                    <h2> Itinerario </h2>
                </div>
                <div class="details-header">
                    <span> <strong>GUÍAS LOCALES DE HABLA HISPANA
                            <br>
                            SALIDAS TODOS LOS JUEVES
                        </strong>
                    </span>
                </div>
                <div class="details-body-description">
                    <%= product.longDescription%>
                </div>
            </section>
            <section class="section-book">
                <nav class="nav-to-book">
                    <a href="/products/cart/<%= product.id %>"><i class="fa-solid fa-cart-shopping"></i>Hacé tu reserva</a>
                </nav>
            </section>

        </main>


        <%- include("../includes/footer") %>

</body>

</html>