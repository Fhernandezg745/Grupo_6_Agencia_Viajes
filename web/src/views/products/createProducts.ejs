<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../includes/head") %>
        <link rel="stylesheet" href="/css/createProducts-mobile.css" />
        <link rel="stylesheet" href="/css/createProducts-tablet.css" />
        <link rel="stylesheet" href="/css/createProducts-desktop.css" />
</head>

<body>
    <%- include("../includes/header") %>

        <main>
            <section class="imageCreateProducts">
                <form action="/products/save" method="post" class="formAreaCreateProducts"
                    enctype="multipart/form-data">
                    <div class="divCreateProduct">
                        <h2 class="headerCreateProduct">CARGA UN NUEVO PRODUCTO</h2>
                        <a href="/editProduct" class="editProductLink">Quiero editar un producto existente</a>
                    </div>
                    <fieldset class="labelFieldset">
                        <label for="nombreProducto"> Titulo del producto </label>
                        <input class="text_area k2TitleBox" type="text" id="tittle" name="title" autocomplete="off"
                            maxlength="250" value="" placeholder="Ingresa un titulo para el paquete" required />
                    </fieldset>
                    <fieldset class="labelFieldset">
                        <label for="precioProducto"><i class="fa-solid fa-money-check-dollar"></i> Precio por persona
                        </label>
                        <input type="number" id="precioProducto" name="precioProducto" placeholder="$10000"
                            class="inputTextFieldCreateProducts" />
                        <label for="baseSingle">
                            Base sinlge
                            <input type="checkbox" id="baseSingle" name="baseSingle" placeholder="2" class="" /></label>
                        <label for="baseDoble">
                            Base doble
                            <input type="checkbox" id="baseDoble" name="baseDoble" placeholder="2" class="" /></label>
                        <label for="familyplan">
                            Family plan
                            <input type="checkbox" id="familyplan" name="familyplan" placeholder="2" class="" /></label>
                    </fieldset>
                    <fieldset class="labelFieldset">
                        <label for="imagenProducto"><i class="fa-solid fa-image"></i> - Imagen ilustrativa -</label>
                        <input type="file" name="imagenProducto" id="imagenProducto"
                            accept="image/png, .jpeg, .jpg, image/gif" class=>
                    </fieldset>
                    <fieldset class="labelFieldset">
                        <label for="categoriaProducto"><i class="fa-solid fa-location-dot registerIcon"></i>
                            Categor√≠a</label>
                        <select name="categoriaProducto" id="categoriaProducto" placeholder="Categoria A"
                            class="inputTextFieldCreateProducts">
                            <option value="Categoria A">Categoria A</option>
                            <option value="Categoria B">Categoria B</option>
                            <option value="Categoria C">Categoria C</option>
                        </select>
                    </fieldset>
                    <fieldset class="labelFieldset">
                        <label for="cantidadNoches"><i class="fa-solid fa-bed"></i> Cantidad de noches de alojamiento
                            <input type="number" name="cantidadNoches" id="cantidadNoches" max="99" min="1"
                                class="cantNoches" /></label>

                        <label for="cantidadDias"><i class="fa-solid fa-sun"></i> Cantidad de dias de viaje
                            <input type="number" name="cantidadDias" id="cantidadDias" max="99" min="1"
                                class="cantDias" /></label>
                    </fieldset>
                    <fieldset class="labelFieldset">
                        <label for=""><i class="fa-solid fa-star"></i>Categoria de Hoteles:
                        </label>
                        <label for="5estrellasHotel">
                            <input type="checkbox" name="estrellasHotel" id="5estrellasHotel" placeholder="2"
                                class="" /><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i
                                class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i
                                class="fa-regular fa-star"></i>
                        </label>
                        <label for="4estrellasHotel">
                            <input type="checkbox" name="estrellasHotel" id="4estrellasHotel" placeholder="2"
                                class="" /><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i
                                class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i>
                        </label>
                        <label for="3estrellasHotel">
                            <input type="checkbox" name="estrellasHotel" id="3estrellasHotel" placeholder="2"
                                class="" /><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i
                                class="fa-regular fa-star"></i>
                        </label>
                        <label for="2estrellasHotel"><input type="checkbox" name="estrellasHotel" id="2estrellasHotel"
                                placeholder="2" class="" />
                            <i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i>
                        </label>
                    </fieldset>
                    <fieldset class="labelFieldset">
                        <label for="itinerario">
                            <i class="fa-solid fa-van-shuttle"></i> Itinenrario/excursiones:
                        </label>
                        <input class="text_area k2TitleBox" type="text" name="itinerario" maxlength="250" value=""
                            placeholder="Pittensberg Bay, Johannesburgo, ..." />
                    </fieldset>
                    <fieldset class="labelFieldset">
                        <input type="checkbox" name="aereos" /><label for="aereos">
                            aereos incluidos <i class="fa-solid fa-plane-departure"></i></label>
                        <input type="checkbox" name="traslados" /><label for="traslados">
                            traslados in/out y entre hoteles <i class="fa-solid fa-bus"></i></label>
                    </fieldset>
                    <fieldset class="labelFieldset">
                        <label for="tags"><i class="fa-solid fa-hashtag"></i> Tags</label>
                        <input class="text_area k2TitleBox" type="text" name="tags" maxlength="250" value=""
                            placeholder="#exoticos #paraiso" />
                    </fieldset>
                    <fieldset class="labelFieldset">
                        <label for="descripcionProducto"><i class="fa-solid fa-list"></i> Descripcion del itinerario
                        </label>
                        <textarea class="productDescriptionField" type="textarea" name="descripcionProducto" value=""
                            placeholder="DIA 01: .., DIA 02:.. " maxlength="100000"></textarea>
                    </fieldset>
                    <fieldset class="buttonField">
                        <button type="submit" value="Crear Producto" name="crearProducto"
                            class="buttonCreateProduct">Crear Producto</button>
                        <button type="reset" value="Cancelar" name="cancelar" class="buttonClose">Cancelar</button>
                    </fieldset>
                </form>
            </section>
        </main>

        <%- include("../includes/footer") %>
</body>

</html>